{
  "name": "Flutter Audiobook Player",

  "dockerComposeFile": [
    "../docker-compose.yml"
  ],
  "service": "flutter-dev",

  // Important: DO NOT run as root anymore
  "remoteUser": "dev",

  "forwardPorts": [3000, 8000, 8080, 9090],

  "features": {
    "ghcr.io/devcontainers/features/git:1": {},
    "ghcr.io/devcontainers/features/common-utils:2": {}
  },

  "customizations": {
    "vscode": {
      "extensions": [
        "Dart-Code.dart-code",
        "Dart-Code.flutter",
        "felixangelov.bloc",
        "zhuangtongfa.Material-theme",
        "GitHub.copilot",
        "kilocode.kilo-code"
      ],
      "settings": {
        "dart.lineLength": 100,
        "editor.formatOnSave": true,
        "terminal.integrated.defaultProfile.linux": "bash"
      }
    }
  },

  "remoteEnv": {
    "PATH": "/opt/flutter/bin:/opt/flutter/bin/cache/dart-sdk/bin:/home/dev/.pub-cache/bin:${containerEnv:PATH}",
    "FLUTTER_ROOT": "/opt/flutter",
    "ANDROID_HOME": "/opt/android-sdk-linux",
    "ANDROID_SDK_ROOT": "/opt/android-sdk-linux",
    "PUB_CACHE": "/home/dev/.pub-cache"
  },

  "workspaceFolder": "/workspace/app",

  "hostRequirements": {
    "cpus": 4,
    "memory": "4gb",
    "storage": "20gb"
  },

  "userEnvProbe": "loginInteractiveShell",
  "init": true
}
